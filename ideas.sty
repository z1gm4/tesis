\newcommand*\descriptionlabel[1]{          %
  \hspace\labelsep                         %
  \normalfont\bfseries #1}                 %
                                           %
\newenvironment{description}{              %
  \list{}{                                 %
    \labelwidth\z@ \itemindent-\leftmargin %
    \let\makelabel\descriptionlabel        %
  }                                        %
}{                                         %
  \endlist                                 %
}                                          %
