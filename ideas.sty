\newcommand{\frontmatter}{                 %
  \if@openright                            %
    \cleardoublepage                       %
  \else                                    %
    \clearpage                             %
  \fi                                      %
  \@mainmatterfalse                        %
  \pagenumbering{roman}}                   %
                                           %
\newcommand{\mainmatter}{                  %
  \if@openright                            %
    \cleardoublepage                       %
  \else                                    %
    \clearpage                             %
  \fi                                      %
  \@mainmattertrue                         %
  \pagenumbering{arabic}}                  %
                                           %
\newcommand{\backmatter}{                  %
  \if@openright                            %
    \cleardoublepage                       %
  \else                                    %
    \clearpage                             %
  \fi                                      %
  \@mainmatterfalse}                       %
